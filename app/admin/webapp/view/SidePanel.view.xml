<mvc:View controllerName="admin.controller.SidePanel"
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:core="sap.ui.core"
  xmlns:mvc="sap.ui.core.mvc">

  <f:DynamicPage toggleHeaderOnTitleClick="false"
    showFooter="true"
    id="SidePanel"
    busyIndicatorDelay="0">
    <f:title>
      <f:DynamicPageTitle>
        <f:heading>
          <Title text="mesaures"
            wrapping="false"
            class="sapUiTinyMarginEnd" />
        </f:heading>
        <f:navigationActions>
          <OverflowToolbarButton type="Transparent"
            icon="sap-icon://decline"
            press="handleClose"
            tooltip="Close column"/>
        </f:navigationActions>
      </f:DynamicPageTitle>
    </f:title>
    <f:content>
         <VBox>
                 <FlexBox direction="Column"
                    class="sapUiTinyMarginBottom">
                   <HBox alignItems="Center">
                   <core:Icon src="sap-icon://heart"
                    color="Neutral"
                   class="sapUiTinyMarginEnd"/>
                   <Title text="{i18n>general.text.Mind}" />
                    </HBox>
                </FlexBox>
                <FlexBox direction="Column"
                    class="sapUiTinyMarginBottom">
                    <Label text="{i18n>general.text.Pressure}:"
                   tooltip="{i18n>general.text.Pressure}:" />
                   <Text text="{ID}"
                   tooltip="Huge" />
                 </FlexBox>
                <FlexBox direction="Column"
                  class="sapUiTinyMarginBottom">
                  <Label text="{i18n>general.text.SleepTime}:"
                    tooltip="{i18n>general.text.SleepTime}:" />
                  <Text text="8h"
                  tooltip="8h" />
               </FlexBox>
               <FlexBox direction="Column"
                  class="sapUiTinyMarginBottom">
                 <Label text="{i18n>general.text.Mood}:"
                  tooltip="{i18n>general.text.Mood}:" />
                 <Text text="good"
                   tooltip="good" />
              </FlexBox>
              <FlexBox direction="Column"
                class="sapUiTinyMarginBottom">
               <HBox alignItems="Center">
                <core:Icon src="sap-icon://pool"
                    color="Neutral"
                   class="sapUiTinyMarginEnd"/>
                <Title text="{i18n>general.text.Health}" />
               </HBox>
              </FlexBox>
               <FlexBox direction="Column"
                  class="sapUiTinyMarginBottom">
                 <Label text="{i18n>general.text.MotionTime}:"
                  tooltip="{i18n>general.text.MotionTime}:" />
                 <Text text="0.5h"
                   tooltip="0.5h" />
              </FlexBox>
               <FlexBox direction="Column"
                  class="sapUiTinyMarginBottom">
                 <Label text="{i18n>general.text.Height}:"
                  tooltip="{i18n>general.text.Height}:" />
                 <Text text="166cm"
                   tooltip="166cm" />
              </FlexBox>
               <FlexBox direction="Column"
                  class="sapUiTinyMarginBottom">
                 <Label text="{i18n>general.text.Weight}:"
                  tooltip="{i18n>general.text.Weight}:" />
                 <Text text="50kg"
                   tooltip="50kg" />
              </FlexBox>  
              <FlexBox direction="Column"
                class="sapUiTinyMarginBottom">
               <HBox alignItems="Center">
                  <core:Icon src="sap-icon://meal"
                    color="Neutral"
                   class="sapUiTinyMarginEnd"/>
                <Title text="{i18n>general.text.Hunger}" />
               </HBox>
              </FlexBox>
               <FlexBox direction="Column"
                  class="sapUiTinyMarginBottom">
                 <Label text="{i18n>general.text.JunkFood}:"
                  tooltip="{i18n>general.text.JunkFood}:" />
                 <Text text="0.5h"
                   tooltip="0.5h" />
              </FlexBox>
               <FlexBox direction="Column"
                  class="sapUiTinyMarginBottom">
                 <Label text="{i18n>general.text.Fruit}:"
                  tooltip="{i18n>general.text.Fruit}:" />
                 <Text text="166cm"
                   tooltip="166cm" />
              </FlexBox>
               <FlexBox direction="Column"
                  class="sapUiTinyMarginBottom">
                 <Label text="{i18n>general.text.Water}:"
                  tooltip="{i18n>general.text.Water}:" />
                 <Text text="50kg"
                   tooltip="50kg" />
              </FlexBox>                                                     
       </VBox>
    </f:content>
    <f:footer>
      <OverflowToolbar>
        <ToolbarSpacer/>
        <Button text="{i18n>general.action.submit}"
          type="Emphasized"
          id="submitBtn"
          press="onSubmitButtonPress" />
        <Button text="{i18n>general.action.close}"
          id="closeBtn"
          press="handleClose" />
      </OverflowToolbar>
    </f:footer>
  </f:DynamicPage>
</mvc:View>
