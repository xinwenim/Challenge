<mvc:View
    xmlns:smartform="sap.ui.comp.smartform"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:semantic="sap.f.semantic"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:m="sap.m"
    xmlns="sap.uxap"
    controllerName="blogs.controller.Detail"
    displayBlock="true"
>
    <m:Page
        id="objectPage"
        title="Blog Detail"
        showNavButton="true"
        navButtonPress="onNavBack"
    >
        <ObjectPageLayout
            id="ObjectPageLayout"
            showTitleInHeaderContent="true"
            showEditHeaderButton="true"
            editHeaderButtonPress="handleEditBtnPress"
            upperCaseAnchorBar="false"
        >
            <headerTitle>
                <ObjectPageDynamicHeaderTitle>
                    <expandedHeading>
                        <m:Title
                            text="{title}"
                            wrapping="true"
                        />
                    </expandedHeading>
                    <actions>
                        <layout:VerticalLayout>
                            <m:Button
                                id="likeBtn"
                                icon="sap-icon://thumb-up"
                                tooltip="Like It"
                                press="onLikeBtnPress"
                            />
                            <m:Label width="0.5cm" design="Bold" textAlign="End" text="{likes}" />
                        </layout:VerticalLayout>
                        <layout:VerticalLayout>
                            <m:Button
                                icon="sap-icon://thumb-down"
                                type="Emphasized"
                                tooltip="Not Like It"
                                press="onDisBtnPress"
                            />
                            <m:Label width="0.5cm" design="Bold" textAlign="End" text="{dislikes}" />
                        </layout:VerticalLayout>
                       <layout:VerticalLayout>
                            <m:Button
                                icon="sap-icon://favorite"
                                type="Emphasized"
                                tooltip="Favorite"
                                press="onFavBtnPress"
                            />
                            <m:Label width="0.5cm" design="Bold" textAlign="End" text="{favorites}" />
                        </layout:VerticalLayout>
                    </actions>
                </ObjectPageDynamicHeaderTitle>
            </headerTitle>

            <headerContent>
                <m:TextArea
                    editable="false"
                    id="text0"
                    height="3cm"
                    width="30cm"
                    value="{content}"
                />
            </headerContent>
        </ObjectPageLayout>
    </m:Page>
</mvc:View>
