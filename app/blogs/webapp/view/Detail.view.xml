<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:m="sap.m"
    xmlns="sap.uxap"
    xmlns:f="sap.ui.layout.form"
    controllerName="blogs.controller.Detail"
    displayBlock="true"
>
    <m:Page
        id="objectPage"
        title="Blog Detail"
        showNavButton="true"
        navButtonPress="onNavBack"
        class="sapUiResponsivePadding--header sapUiResponsivePadding--content sapUiResponsivePadding--footer sapUiResponsivePadding--floatingFooter"
    >
        <ObjectPageLayout
            id="ObjectPageLayout"
            showTitleInHeaderContent="true"
            showEditHeaderButton="true"
            editHeaderButtonPress="handleEditBtnPress"
            upperCaseAnchorBar="false"
        >
            <headerTitle>
                <ObjectPageDynamicHeaderTitle
                    id="_IDGenObjectPageDynamicHeaderTitle1"
                >
                    <expandedHeading>
                        <m:Title
                            id="_IDGenTitle1"
                            text="{title}"
                            wrapping="true"
                        />
                    </expandedHeading>
                    <actions>
                        <layout:VerticalLayout id="_IDGenVerticalLayout1">
                            <m:Button
                                id="likeBtn"
                                icon="sap-icon://thumb-up"
                                tooltip="Like It"
                                press="onLikeBtnPress"
                            />
                            <m:Label
                                id="_IDGenLabel1"
                                width="0.5cm"
                                design="Bold"
                                textAlign="End"
                                text="{likes}"
                            />
                        </layout:VerticalLayout>
                        <layout:VerticalLayout id="_IDGenVerticalLayout2">
                            <m:Button
                                id="disLikeBtn"
                                icon="sap-icon://thumb-down"
                                tooltip="Not Like It"
                                press="onDisBtnPress"
                            />
                            <m:Label
                                id="_IDGenLabel2"
                                width="0.5cm"
                                design="Bold"
                                textAlign="End"
                                text="{dislikes}"
                            />
                        </layout:VerticalLayout>
                        <layout:VerticalLayout id="_IDGenVerticalLayout3">
                            <m:Button
                                id="btnFav"
                                icon="sap-icon://favorite"
                                tooltip="Favorite"
                                press="onFavBtnPress"
                            />
                            <m:Label
                                id="_IDGenLabel3"
                                width="0.5cm"
                                design="Bold"
                                textAlign="End"
                                text="{favorites}"
                            />
                        </layout:VerticalLayout>
                    </actions>
                </ObjectPageDynamicHeaderTitle>
            </headerTitle>

            <headerContent>
                <layout:VerticalLayout id="_IDGenVerticalLayout4">
                    <m:TextArea
                        editable="false"
                        id="text0"
                        height="3cm"
                        width="30cm"
                        value="{content}"
                    />
                    <m:Label
                        id="_IDGenLabel4"
                        width="30cm"
                        text="{createdBy/name}, {createdAt} "
                        textAlign="End"
                    />
                </layout:VerticalLayout>
            </headerContent>
            <sections>
                <ObjectPageSection
                    id="_IDGenObjectPageSection1"
                    titleUppercase="false"
                    title="Replys"
                >
                    <subSections>
                        <ObjectPageSubSection id="_IDGenObjectPageSubSection1">
                            <m:Table
                                id="replyList"
                                items="{replys}"
                    
                            >
                                <m:headerToolbar>
                                    <m:OverflowToolbar
                                        id="_IDGenOverflowToolbar1"
                                    >
                                        <m:content>
                                            <m:ToolbarSpacer
                                                id="_IDGenToolbarSpacer1"
                                            />
                                            <m:Button
                                                id="addUserButton"
                                                icon="sap-icon://add"
                                                tooltip="Create"
                                                press=".onCreate"
                                            >
                                                <m:layoutData>
                                                    <m:OverflowToolbarLayoutData
                                                        id="_IDGenOverflowToolbarLayoutData1"
                                                        priority="NeverOverflow"
                                                    />
                                                </m:layoutData>
                                            </m:Button>
                                            <m:Button
                                                id="sortReplyButton"
                                                icon="sap-icon://sort"
                                                tooltip="Sort"
                                                press=".onSort"
                                            />
                                        </m:content>
                                    </m:OverflowToolbar>
                                </m:headerToolbar>
                                <m:columns>
                                    <m:Column id="_IDGenColumn1">
                                        <m:Text
                                            id="_IDGenText3"
                                            text="ID"
                                        />
                                    </m:Column>
                                    <m:Column id="_IDGenColumn2">
                                        <m:Text
                                            id="_IDGenText4"
                                            text="Content"
                                        />
                                    </m:Column>
                                    <m:Column id="_IDGenColumn3">
                                        <m:Text
                                            id="_IDGenText5"
                                            text="Replyer"
                                        />
                                    </m:Column>
                                </m:columns>
                                <m:items>
                                    <m:ColumnListItem
                                        id="_IDGenColumnListItem1"
                                    >
                                        <m:cells>
                                            <m:Text
                                                id="_IDGenText7"
                                                text="{ID}"
                                            />
                                        </m:cells>
                                        <m:cells>
                                            <m:Text
                                                id="_IDGenInput1"
                                                text="{content}"
                                                textAlign="Begin"
                                            />
                                        </m:cells>
                                        <m:cells>
                                            <m:Text
                                                id="_IDGenText6"
                                                text="{createdBy/name}"
                                            />
                                        </m:cells>
                                    </m:ColumnListItem>
                                </m:items>
                            </m:Table>
                        </ObjectPageSubSection>
                    </subSections>
                </ObjectPageSection>
            </sections>
        </ObjectPageLayout>
    </m:Page>
</mvc:View>
