<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns:m="sap.m"
    controllerName="blogs.controller.Object"
    height="100%"
>
    <m:Page
        id="objectPage"
        showNavButton="true"
        busy="{objectView>/busy}"
        busyIndicatorDelay="{objectView>/delay}"
        title="{i18n>objectTitle}"
        navButtonPress="onNavBack"
    >
        <ObjectPageLayout
            id="ObjectPageLayout"
            enableLazyLoading="true"
            alwaysShowContentHeader="true"
            upperCaseAnchorBar="false"
        >
            <headerTitle>
                <ObjectPageHeader
                    id="objectPageHeader"
                    objectTitle="{title}"
                    objectSubtitle="{ID}"
                    isObjectTitleAlwaysVisible="true"
                    isObjectSubtitleAlwaysVisible="true"
                />
            </headerTitle>
            <headerContent>
                <layout:VerticalLayout id="_IDGenVerticalLayout1">
                    <m:Label
                        id="contentTextLabel"
                        text="Content"
                    />
                    <m:Title
                        id="ConentTextTitle"
                        text="{content}"
                    />
                </layout:VerticalLayout>
            </headerContent>
        </ObjectPageLayout>
    </m:Page>
</mvc:View>
