
<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:fb="sap.ui.comp.filterbar"
    id="blogs.view.fragment.createBlog"
    controllerName="blogs.controller.Blogs"
    xmlns:form="sap.ui.layout.form"
>
    <Dialog
        id="createBlogDialog"
        title="New Blog"
        draggable="true"
        beforeOpen=".onBeforeDialogOpen"
        afterClose=".onAfterDialogClose"
    >
        <form:SimpleForm
            id="creationform"
            editable="true"
            validateFieldGroup=".onValidateFieldGroup"
        >
            <form:content>
                <Label
                    id="_IDGenLabel1"
                    text="Title"
                />
                <Input
                    id="titleInput"
                    required="true"
                />
                <Label
                    id="_IDGenLabel2"
                    text="Content"
                />
                <TextArea
                    id="contentInput"
                    showExceededText="true"
                    maxLength="100"
                />
                <Label
                    id="labelAna"
                    text="Anonymous?"
                />
                <CheckBox
                    id="checkBox"
                    text="Hide your information"
                />
            </form:content>
        </form:SimpleForm>
        <beginButton>
            <Button
                id="addButton"
                text="OK"
                type="Emphasized"
                press=".onDialogOkPress"
            />
        </beginButton>
        <endButton>
            <Button
                id="cancelButton"
                text="Cancel"
                press=".onDialogCancelPress"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
