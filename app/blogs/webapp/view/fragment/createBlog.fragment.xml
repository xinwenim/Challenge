<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:fb="sap.ui.comp.filterbar"
    id="blogs.view.fragment.createBlog"
    controllerName="blogs.controller.Blogs"
    xmlns:form="sap.ui.layout.form"
>
    <Dialog
        id="createBlogDialog"
        title="New Blog"
        initialFocus="titleInput"
        draggable="true"
        beforeOpen=".onBeforeDialogOpen"
        afterClose=".onAfterDialogClose"
    >
        <form:SimpleForm
            id="form"
            editable="true"
            validateFieldGroup=".onValidateFieldGroup"
            fieldGroupIds="inputs"
        >
            <Label text="Title" />
            <Input
                id="titleInput"
                fieldGroupIds="inputs"
                required="true"
                value="{
        path: 'odata>connid',
        type: 'ODataStringType',
        constraints: {
          isDigitSequence: true,
          maxLength: 4,
          nullable: false
        }
      }"
            />
            <Label text="content" />
            <TextArea
                showExceededText="true"
                maxLength="100"
            />
        </form:SimpleForm>
        <beginButton>
            <Button
                id="addButton"
                text="OK"
                type="Emphasized"
                press=".onDialogOkPress"
            />
        </beginButton>
        <endButton>
            <Button
                id="cancelButton"
                text="Cancel"
                press=".onDialogCancelPress"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
