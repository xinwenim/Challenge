<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:fb="sap.ui.comp.filterbar"
    id="profile.view.fragment.question"
    controllerName="profile.controller.Profile"
    xmlns:form="sap.ui.layout.form"
>
    <Dialog
        id="idAuthDia"
        title="Log in"
        draggable="true"
        beforeOpen=".onBeforeDialogOpen"
        afterClose=".onAfterDialogClose"
    >
        <form:SimpleForm
            id="idAuthform"
            editable="true"
            validateFieldGroup=".onValidateFieldGroup"
        >
            <form:content>
                <Label text="Input your MBTI type" />
                <Input
                    id="idInputType"
                    required="true"
                />
            </form:content>
        </form:SimpleForm>
        <beginButton>
            <Button
                id="addButton"
                text="OK"
                type="Emphasized"
                press=".onLoginUserAlex"
            />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
