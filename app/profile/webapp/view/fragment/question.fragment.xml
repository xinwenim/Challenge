<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:fb="sap.ui.comp.filterbar"
    id="profile.view.fragment.question"
    controllerName="profile.controller.Profile"
    xmlns:form="sap.ui.layout.form"
>
    <Dialog
        id="idQuestionDia"
        title="Test Your MBTI Personality"
        draggable="true"
        beforeOpen=".onBeforeDialogOpen"
        afterClose=".onAfterDialogClose"
    >
        <form:SimpleForm
            id="questionform"
            editable="true"
            validateFieldGroup=".onValidateFieldGroup"
        >
            <form:content>
                <Label
                    labelFor="question1"
                    text="Prefer to stry alone or go out?"
                />
                <RadioButtonGroup
                    id="question1"
                    columns="2"
                    class="sapUiMediumMarginBottom"
                >
                    <RadioButton
                        id="gp1q1"
                        text="Go out"
                    />
                    <RadioButton
                        id="qp1q2"
                        text="Stay alone"
                    />
                </RadioButtonGroup>
                <Label
                    labelFor="question2"
                    text="Always thinking"
                />
                <RadioButtonGroup
                    id="question2"
                    columns="2"
                    class="sapUiMediumMarginBottom"
                >
                    <RadioButton
                        id="gp2q1"
                        text="Abstract"
                    />
                    <RadioButton
                        id="gp2q2"
                        text="Concret"
                    />
                </RadioButtonGroup>
                <Label
                    labelFor="question3"
                    text="Make decision_"
                />
                <RadioButtonGroup
                    id="question3"
                    columns="2"
                    class="sapUiMediumMarginBottom"
                >
                    <RadioButton
                        id="gp3q1"
                        text="Rationally"
                    />
                    <RadioButton
                        id="gp3q2"
                        text="Irrationally"
                    />
                </RadioButtonGroup>
                <Label
                    labelFor="question4"
                    text="Adaptive to changes of environment?"
                />
                <RadioButtonGroup
                    id="question4"
                    columns="2"
                    class="sapUiMediumMarginBottom"
                >
                    <RadioButton
                        id="gp4q1"
                        text="Yes"
                    />
                    <RadioButton
                        id="gp4q2"
                        text="No"
                    />
                </RadioButtonGroup>
            </form:content>
        </form:SimpleForm>
        <beginButton>
            <Button
                text="Submit"
                type="Emphasized"
                press=".onSubmitPress"
            />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
